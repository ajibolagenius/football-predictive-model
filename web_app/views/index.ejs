<!DOCTYPE html>
<html>

<head>
    <title>Football Oracle</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-900 text-white p-10">
    <h1 class="text-3xl font-bold mb-6 text-green-400">âš½ Match Schedule</h1>

    <div class="grid gap-4">
        <% matches.forEach(m=> { %>
            <div class="bg-gray-800 p-4 rounded flex justify-between items-center" id="card-<%= m.match_id %>">
                <div>
                    <div class="text-xs text-gray-400">
                        <%= new Date(m.date).toDateString() %>
                    </div>
                    <div class="text-xl font-bold">
                        <%= m.home %> vs <%= m.away %>
                    </div>
                </div>
                <button onclick="predict('<%= m.match_id %>')" class="bg-blue-600 hover:bg-blue-500 px-4 py-2 rounded">
                    ðŸ”® Predict
                </button>
            </div>
            <% }) %>
    </div>

    <script>
        async function predict(id) {
            const card = document.getElementById(`card-${id}`);
            const btn = card.querySelector('button');
            btn.innerText = "Thinking...";

            const res = await fetch(`/api/predict/${id}`);
            const data = await res.json();

            if (data.home_win) {
                const winProb = (data.home_win * 100).toFixed(1);
                card.innerHTML += `
                    <div class="text-right border-l-2 border-green-500 pl-4">
                        <div class="text-2xl font-bold text-green-400">${winProb}%</div>
                        <div class="text-xs text-gray-400">Home Win Prob</div>
                    </div>
                `;
                btn.remove();
            } else {
                btn.innerText = "Error";
            }
        }
    </script>
</body>

</html>